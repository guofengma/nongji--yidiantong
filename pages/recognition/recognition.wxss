/* pages/recognition/recognition.wxss */
.bg image{
    width: 100%;
    margin: 0 auto;
    display: block;
}
.name{
    width: 100vw;
    line-height: 100rpx;
    text-align: center;
    position: absolute;
    bottom: 30rpx;
    color: white;
    font-size: 40rpx;
}
.bg{
    position: relative;
}
.father{
    margin-top: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 240rpx;
}
.swipes{
    width: 100%;
    height: 240rpx;
    box-sizing: border-box;
}
.moo image{
    flex: 0 0 200rpx;
    height: 200rpx;
}
.swipes view{
    flex: 1 1 auto;
    text-align: center;
}
.jiantou{
    margin: 0 10rpx;
    box-sizing: border-box;
}
.moo{
    margin: 5px;
    height: 220rpx;
    display: flex;
    align-items: center;
    padding: 10rpx;
    box-sizing: border-box;
    -moz-box-shadow:0px -1px 10px #CBC9CB;
    -webkit-box-shadow:0px -1px 10px #CBC9CB;
    box-shadow:0px -1px 10px #CBC9CB;
}
