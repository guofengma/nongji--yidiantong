<!--index.wxml-->
<scroll-view class="page_list wrap" scroll-y="true" bindscrolltolower="loadMore" bindscrolltoupper="refresh"
             style="height: 200px;background-color:#fff;">

    <view class="swiper_ban">
        <swiper indicator-dots="{{indicatorDots}}"
                circular="true"
                bindchange="swiperChange"
                autoplay="{{autoplay}}"
                interval="{{interval}}"
                indicator-active-color="{{activeclor}}"
                duration="{{duration}}">
            <block wx:for="{{imgUrls}}" wx:key="{{index}}">
                <swiper-item bindtap="skipDetails" data-index="{{index}}">
                    <image mode="scaleToFill" src="{{item}}" class="slide-image" width="355" height="150"/>
                </swiper-item>
            </block>
        </swiper>
    </view>


    <view class="my_swiper">
        <!--<view class="indextop">-->
            <!--<view class="logo">-->
                <!--<view class="img" bindtap="gonext">-->
                    <!--<image src='http://file.yzyy365.com/images/yunlite//goadd.png'></image>-->
                <!--</view>-->
            <!--</view>-->
            <!--<view class="logotext">3万在线专家实时解答你的农业问题</view>-->
        <!--</view>-->

        <!--<view style='height:.5rem;width:100%; background:#F4F3F3'></view>-->

        <view class="my_list">
            <view class="mylititle">已解答问题</view>

            <view class="wrap_li">
                <view class="blo"
                      wx:for="{{queatdata}}"
                      data-id="{{item.questionUUID}}"
                      bindtap="skipDetail"
                      wx:key="{{index}}">
                    <image class="user_img" src="{{item.askerHeadImg}}"></image>
                    <view class="right_li">
                        <view class="title">
                            <view>{{item.askerName}}</view>
                            <view>{{item.specie}}</view>
                        </view>
                        <view class="question">{{item.title}}</view>
                        <view class="tu">
                            <view style="width: 100vw;height: 10rpx" wx:if="{{item.images.length < 1}}"></view>
                            <view class="{{item.images.length == 1 ? 'yi' : item.images.length == 2 ? 'er' : 'san'}}"
                                  wx:for="{{item.images}}"
                                  wx:key="{{index}}"
                                  wx:for-item="idx"
                                  style="background-image: url('{{idx}}')">
                            </view>

                        </view>
                        <view class="address">
                            <image wx:if="{{item.location}}" src="../../images/address.png" mode="widthFix"></image>
                            <view>{{item.location}}</view>
                        </view>
                        <view class="footer">
                            <view class="data">{{item.createTime}}</view>
                            <view class="mes">
                                <image src="../../images/message1.png" mode="widthFix"></image>
                                <view>{{item.answerCount}}条</view>
                            </view>
                        </view>
                    </view>
                </view>

            </view>
        </view>
    </view>
    <view class="tips">
        <view wx:if="{{loading}}" style="text-align:center;font-size:30rpx;">
            <image style=" width:18px;height:18px;margin-top:10px;margin-bottom:-3px"
                   src="http://h5.yzyy365.com/images/common/loading.gif" mode="aspectFill"/>
            玩了命的加载中...
        </view>
        <!--<view wx:else><text>没有更多内容了</text></view>-->
    </view>

</scroll-view>
<view class="mask" wx:if="{{showModal}}"></view>
<view class="modalDlg" wx:if="{{showModal}}">
    <view class="title">为了您更好的体验,请先同意授权登录</view>
    <view class="but">
        <view bindtap="jujue">拒绝</view>
        <view bindtap="jujue">
            <button open-type="getUserInfo" bindgetuserinfo="bindgetuserinfo">授权登录</button>
        </view>
    </view>
</view>
<image class="tiwen" mode="scaleToFill" bindtap="gonext" src="../../images/tiwen.png"></image>
